#plan-container {
  overflow:hidden;

  .hide{
    display: none;
  }

  &:after {
    clear: both;
  }

  .col {
    float: left;
    background: #f3f3f3;

    ul {

      li {
        border-right: 1px solid #ECEDF3;
        padding: 10px 0;
        text-align: center;
        font-size: 18px;
        color: #666;

        span {
          font-size: 12px;
          display: inline;

          &.sum {
            color: #45bcd2;
            font-size: 40px;
            font-weight: bold;
          }

          &.dollarSign {
            font-size: 22px;
            font-weight: bold;
            color: #2b2b2b;
            position: relative;
            top: -12px;
          }

          &.cents {
            font-size: 22px;
            color: #363636;
            padding-left: 5px;
            position: relative;
            top: -12px;
          }

          &.year {
            color: #666;
            position: relative;
            left: -25px;
          }
        }


        button{
          background: #45bcd2;
          padding: 12px 25px 12px 25px;
          font-size: 25px;
          
          span{
            font-size: 25px;
            padding-left: 10px;
          }

          &:hover{
            background: #339cb1;
          }
        }

        &.li-button{
          min-height: 53px;
        }

        &.header{
          background: #45bcd2 !important;
          border: none;
          padding: 20px 0;
          font-size: 20px;
          color: #fff;
        }

        &.spacer {
          height: 40px;
        }

        &:nth-child(even) {
          background: #F5F5F5;
        }

        &:nth-child(odd) {
          background: #fff;
        }

      }
    }
  }

  @include grid( 5, 0 );
}



